{% extends 'base.html.twig' %}

{% block title 'Gerer les catégories'%}


{% block body %}

	<div class="container mt-4">
		<h1>Gérer les catégories</h1>

		{% for message in app.flashes('success')  %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		<table class="table table-striped">
			<thead>
				<th>Nom</th>
				<th>Actions</th>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{category.name}}</td>
						<td>
							<a href="{{path('admin.property.category.edit', {id: category.id})}}" class="btn btn-secondary">Editer</a>
							<form method="POST" action="{{path('admin.property.delete', {id: category.id})}}" style="display: inline-block;" onsubmit="return confirm('Certain ?')">
								<input type="hidden" name="_method" value="DELETE">
								<input type="hidden" name="_token" value="{{csrf_token('delete' ~ category.id)}}">
								<button class="btn btn-danger">Supprimer</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="text-right">
			<a href="{{path('admin.property.category.new')}}" class="btn btn-primary">Créer une nouvelle catégorie</a>
		</div>
	</div>

{% endblock %}
